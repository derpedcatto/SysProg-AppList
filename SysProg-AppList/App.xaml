<Application x:Class="SysProg_AppList.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SysProg_AppList"
             StartupUri="MainWindow.xaml"
             >
    <Application.Resources>
        <Style x:Key="MainWindowButton"
               TargetType="Button"
               >
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="Padding" Value="20,5" />
        </Style>
        <Style x:Key="MainWindowExampleButton"
               BasedOn="{StaticResource MainWindowButton}"
               TargetType="Button"
               >
            <Setter Property="Background" Value="SeaGreen" />
        </Style>
        <Style x:Key="MainWindowHomeworkButton"
               BasedOn="{StaticResource MainWindowButton}"
               TargetType="Button"
               >
            <Setter Property="Background" Value="CornflowerBlue" />
        </Style>
    </Application.Resources>
</Application>
